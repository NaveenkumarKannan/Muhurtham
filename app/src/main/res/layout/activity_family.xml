<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Family"
    android:background="@drawable/couple"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#90ca7091"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Family Details"
            android:textSize="25dp"
            android:fontFamily="cursive"
            android:layout_marginTop="5dp"
            android:background="#78ffffff"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold|italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the family details below"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textColor="#f7f7f7"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/etFname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Father  / தந்தை"
            android:fontFamily="serif"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:background="#78ffffff"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp"
            android:textStyle="italic|bold"/>

        <EditText
            android:id="@+id/etFBusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Father's Business / தொழில்"
            android:fontFamily="serif"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:background="#78ffffff"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="15sp"
            android:textStyle="italic|bold"/>

        <EditText
            android:id="@+id/etMname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mother / தாய்"
            android:fontFamily="serif"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:background="#78ffffff"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp"
            android:textStyle="italic|bold"/>

        <EditText
            android:id="@+id/etMBusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Business / தொழில்"
            android:fontFamily="serif"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:background="#78ffffff"
            android:textColor="#000000"
            android:visibility="gone"
            android:textColorHint="#000000"
            android:textSize="16sp"
            android:textStyle="italic|bold"/>

        <EditText
            android:id="@+id/etBroNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No. of brothers"
            android:inputType="number"
            android:fontFamily="serif"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:background="#78ffffff"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp"
            android:textStyle="italic|bold"/>

        <EditText
            android:id="@+id/etSisNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No. of sisters"
            android:inputType="number"
            android:fontFamily="serif"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:background="#78ffffff"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp"
            android:textStyle="italic|bold"/>

        <RadioGroup
            android:id="@+id/rgOwnHouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="#78ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Own House:"
                android:fontFamily="serif"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#0090ff"
                android:textSize="16sp"
                android:textStyle="italic|bold"/>

            <RadioButton
                android:id="@+id/rbYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textColor="#ffffff"
                android:fontFamily="serif"
                android:textSize="16dp"
                android:textStyle="italic|bold"/>

            <RadioButton
                android:id="@+id/rbNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textColor="#ffffff"
                android:fontFamily="serif"
                android:textSize="16dp"
                android:textStyle="italic|bold"/>
        </RadioGroup>

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="nextPage"
            android:text="next"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            android:background="#79000000"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-condensed"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>