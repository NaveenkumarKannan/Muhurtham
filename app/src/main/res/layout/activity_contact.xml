<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contact"
    android:orientation="vertical"
    android:background="@drawable/couple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#90ca7091">
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Details"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:fontFamily="cursive"
        android:layout_marginTop="5dp"
        android:background="#78ffffff"
        android:padding="10dp"
        android:textColor="#000000"
        android:textStyle="bold|italic"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the Contact details below"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:textColor="#f7f7f7"
        android:textStyle="bold|italic"/>
    <EditText
        android:id="@+id/etMobNo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile No1"
        android:inputType="phone"
        android:fontFamily="serif"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:background="#78ffffff"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16sp"
        android:textStyle="italic|bold"/>
    <EditText
        android:id="@+id/etMobNo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile No2"
        android:inputType="phone"
        android:fontFamily="serif"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:background="#78ffffff"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16sp"
        android:textStyle="italic|bold"/>
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Id"
        android:inputType="textEmailAddress"
        android:fontFamily="serif"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:background="#78ffffff"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16sp"
        android:textStyle="italic|bold"/>
    <EditText
        android:id="@+id/etAddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:fontFamily="serif"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:background="#78ffffff"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16sp"
        android:textStyle="italic|bold"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="center"
        android:onClick="nextPage"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:background="#79000000"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>